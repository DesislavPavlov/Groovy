@model Groovy.ViewModels.ArtistDetailsViewModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = $"{Model.Artist.Name}";
    string GetBackgroundArtistColor(string mainColor)
    {
        mainColor += "cc";
        return mainColor;
    }
}

<style>
    .artistColor{
        background-color: @GetBackgroundArtistColor(Model.Artist.Color);
        color: white;
        position: sticky;
        width: 100%;
        height: 23vh;
    }

    .artistColor img{
            position: sticky;
            width: 40vh;
            height: 40vh;
            margin-left: 4vh;
            margin-top: 4vh;
            border-radius: 5%;
    }

    h2 {
        font-size: 55px;
        margin-top: -40vh;
        margin-left: 38%;
    }

    h3 {
        font-size: 35px;
        margin-left: 38%;
    }

    .relatedArtists {
        width: 18.5vw;
        position: sticky;
        margin-left: 4vh;
        margin-top: 24vh;
    }
    #relatedArtistsTitle{
        font-size: 35px;
    }
</style>
<div class="artistColor">
    <img id="artistPic" src="@Model.Artist.ImageUrl" alt="">
    <h2>@Model.Artist.Name</h2>
    <h3>Дискография</h3>
</div>
<div class="relatedArtists">
    <div>
        <p id="relatedArtistsTitle">Подобни артисти 🎤</p>
        @Html.Partial("_EntityList", Model.RelatedArtists)
    </div>
</div>
<div class="artistSongs">
    <div>
        
    </div>
</div>