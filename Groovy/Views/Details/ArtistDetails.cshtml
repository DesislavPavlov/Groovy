@model Groovy.ViewModels.ArtistDetailsViewModel;
@{
    ViewData["Title"] = $"{Model.Artist.Name}";
    string GetBackgroundArtistColor(string mainColor)
    {
        mainColor += "cc";
        return mainColor;
    }
}

<style>
    .artistColor {
        background-color: @GetBackgroundArtistColor(Model.Artist.Color);
        color: white;
        width: 100%;
        height: 23vh;
        display: flex;
        align-items: center;
    }

        .artistColor img {
            position: sticky;
            width: 40vh;
            height: 40vh;
            margin-left: 4vh;
            margin-top: 25vh;
            border-radius: 5%;
        }

    .artist-info {
        margin-left: 5%;
        margin-top: 1vh;
    }

    h2 {
        font-size: 55px;
    }

    h3 {
        font-size: 35px;
    }

    .relatedArtists {
        width: 18.5vw;
        margin-left: 4vh;
        margin-top: 24vh;
    }

    #relatedArtistsTitle {
        font-size: 35px;
    }
</style>

<div class="container-fluid">
    <!-- Artist Header -->
    <div class="artistColor">
        <img id="artistPic" class="img-fluid" src="@Model.Artist.ImageUrl" alt="">
        <div class="artist-info">
            <h2 class="fw-bold">@Model.Artist.Name</h2>
            <h3 class="fw-normal">Дискография</h3>
        </div>
    </div>

    <!-- Main Content -->
    <div class="d-flex">
        <!-- Related Artists Section -->
        <div class="relatedArtists">
            <p id="relatedArtistsTitle">Подобни артисти 🎤</p>
            @Html.Partial("_EntityList", Model.RelatedArtists)
        </div>

        <!-- Placeholder for Songs Section -->
        <div class="artistSongs flex-grow-1">
            <div>
                <!-- Song list content here -->
            </div>
        </div>
    </div>
</div>
