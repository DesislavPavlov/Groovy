@using Groovy.ViewModels;
@model Groovy.ViewModels.ArtistDetailsViewModel;
@{
    ViewData["Title"] = $"{Model.Artist.Name}";
    string GetBackgroundArtistColor(string mainColor)
    {
        mainColor += "cc";
        return mainColor;
    }
}

<style>
    .artistColor {
        background-color: @GetBackgroundArtistColor(Model.Artist.Color);
        color: white;
        width: 100%;
        height: 23vh;
        display: flex;
        align-items: center;
    }

        .artistColor img {
            position: sticky;
            width: auto;
            height: 40vh;
            margin-left: 4vh;
            margin-top: 25vh;
            border-radius: 5%;
        }

    .artist-info {
        margin-left: 5%;
        margin-top: 1vh;
    }

    h2 {
        font-size: 55px;
    }

    h3 {
        font-size: 35px;
    }

    .relatedArtists {
        margin-top: 24vh;
    }

    @@media (max-width: 767.98px) {
        .artistColor {
            flex-direction: column;
            height: auto;
            padding: 2vh;
        }

            .artistColor img {
                width: 60vw;
                height: auto;
                margin: 2vh auto;
                position: static;
            }

        .artist-info {
            margin: 2vh 0;
        }

        h2 {
            font-size: 10vw;
        }

        h3 {
            font-size: 8vw;
        }
        /* Stack the two sections */
        .d-flex {
            flex-direction: column;
        }

        .relatedArtists, .artistSongs {
            width: 90%; /* Take full width on mobile */
            margin-left: 5vw;
            margin-top: 2vh;
        }

        #relatedArtistsTitle {
            font-size: 6vw;
            text-align: center;
        }
    }

    @@media (min-width: 768px) and (max-width: 1024px) {
        .artistColor {
            flex-direction: column;
            height: auto;
            padding: 4vh;
        }

            .artistColor img {
                width: 40vw;
                height: auto;
                margin: 3vh auto;
                position: static;
            }

        .artist-info {
            margin: 3vh 0;
        }

        h2 {
            font-size: 4vw;
        }

        h3 {
            font-size: 3vw;
        }

        .relatedArtists, .artistSongs {
            position: static;
            width: 80vw;
            margin: 3vh auto !important;
            float: none;
            display: block;
        }

        #relatedArtistsTitle {
            font-size: 6vw;
            text-align: center;
        }
    }
</style>

<div class="container-fluid">
    <!-- Artist Header -->
    <div class="artistColor rounded-3">
        <img id="artistPic" class="img-fluid" src="@Model.Artist.ImageUrl" alt="">
        <div class="artist-info">
            <h2 class="fw-bold">@Model.Artist.Name</h2>
            <h3 class="fw-normal">Дискография</h3>
        </div>
    </div>

    <!-- Main Content -->
    <div class="d-flex container gap-5 mt-5">
        <!-- Related Artists Section -->
        <div class="relatedArtists col-3">
            <p id="relatedArtistsTitle" class="text-dark fs-3">Подобни артисти 🎤</p>
            @Html.Partial("_EntityList", Model.RelatedArtists)
        </div>

        <!-- Placeholder for Songs Section -->
        <div class="col-8">
            <div>
                @Html.Partial("_SongGrid", Model.Songs)
            </div>
        </div>
    </div>
</div>
