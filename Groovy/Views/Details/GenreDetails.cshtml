@model Groovy.ViewModels.GenreDetailsViewModel;

@{
    ViewData["Title"] = $"{Model.Genre.Name}";
    string GetBackgroundGenreColor(string mainColor)
    {
        mainColor += "cc";
        return mainColor;
    }
}
<style>
    .genreColor {
        background-color: @GetBackgroundGenreColor(Model.Genre.Color);
        color: white;
        width: 100%;
        height: 23vh;
        display: flex;
        align-items: center;
    }

    .genre-info {
        margin-left: 5%;
        margin-top: 1vh;
    }

    h2 {
        font-size: 55px;
    }

    @@media (max-width: 768px) {
    h2 {
        font-size: 36px;
    }

    .genre-info {
        margin: 0 auto;
        text-align: center;
    }

    .d-flex {
        flex-direction: column;
        align-items: center;
    }

    .genreArtists, .genreSongs {
        width: 90%; /* Take full width on mobile */
        margin-left: 0;
        margin-top: 2vh;
    }
}
</style>

<div class="container-fluid">
    <!-- Artist Header -->
    <div class="genreColor rounded-3">
        <div class="genre-info">
            <h2 class="fw-bold">@Model.Genre.Name</h2>
        </div>
    </div>
    <div class="d-flex container gap-5 mt-5">
        <div class="col-4">
            <p id="artistsOfGenreTitle" class="text-dark fs-3">Изпълнители 🎤:</p>
            @Html.Partial("_EntityList", Model.Artists)
        </div>
        <!-- Placeholder for Songs Section -->
        <div class="col-8">
            <div>
                @Html.Partial("_SongGrid", Model.Songs)
            </div>
        </div>
    </div>
</div>